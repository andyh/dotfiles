alias ls="ls -laG"

alias gc="git commit"
alias ga="git add"
alias gst="git status"
alias gdiff="git diff"

parse_git_branch() {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

prompter() {
	local RED="\[\033[0;31m\]"
	local BLUE="\[\033[0;34m\]"
	local NORM="\[\033[0m\]"

	PS1="$BLUE\u:$NORM\w $RED\$(parse_git_branch)$NORM\$ "
}

prompter

source ~/.tabtab.bash
source ~/.bash-git-completion.sh
